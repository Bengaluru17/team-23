<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidisha.kshamata_23.MainActivity">


    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:id="@+id/nametv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter name"
        android:ems="10"
        android:layout_toRightOf="@+id/nametv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="100dp"
        android:id="@+id/nameET"
        />
    <TextView
        android:text="Date of birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nametv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/dobtv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter DOB"
        android:ems="10"
        android:layout_below="@id/nameET"
        android:layout_toRightOf="@+id/dobtv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="42dp"
        android:id="@+id/dobEt"
        />
    <TextView
        android:text="ID Card No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dobtv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/idcardtv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter ID Card NO"
        android:ems="10"
        android:layout_below="@id/dobEt"
        android:layout_toRightOf="@+id/dobtv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:id="@+id/idcardEt"
        />
    <TextView
        android:text="Phone No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idcardtv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/phonetv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter phone no"
        android:ems="10"
        android:layout_below="@id/idcardEt"
        android:layout_toRightOf="@+id/dobtv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="42dp"
        android:id="@+id/phoneEt"
        />
    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phonetv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/emailtv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Email"
        android:ems="10"
        android:layout_below="@id/phoneEt"
        android:layout_toRightOf="@+id/dobtv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp"
        android:id="@+id/emailEt"
        />
    <TextView
        android:text="Voc Training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailtv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/voctv" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/voctv"
        android:layout_below="@+id/emailEt"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/radiog">
        <RadioButton android:id="@+id/vcYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true"
            android:onClick="radioCheck"
            />
        <RadioButton android:id="@+id/vcNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:onClick="radioCheck"/>
    </RadioGroup>
    <TextView
        android:text="Background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/voctv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/backtv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Background Details"
        android:ems="10"
        android:layout_below="@id/radiog"
        android:layout_toRightOf="@+id/dobtv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/backEt"
        />
    <TextView
        android:text="Duration of stay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backtv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/durstaytv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Duration"
        android:ems="10"
        android:layout_below="@id/backEt"
        android:layout_toRightOf="@+id/durstaytv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="42dp"
        android:id="@+id/durstayEt"
        />
    <TextView
        android:text="Skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/durstaytv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/skilltv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Skills"
        android:ems="10"
        android:layout_below="@id/durstayEt"
        android:layout_toRightOf="@+id/skilltv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="140dp"
        android:id="@+id/skillEt"
        />
    <TextView
        android:text="Skill Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skilltv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/skillLeveltv" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Skill Level"
        android:ems="10"
        android:layout_below="@id/skillEt"
        android:layout_toRightOf="@+id/skillLeveltv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/skilllevelEt"
        />
    <TextView
        android:text="Current Salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skillLeveltv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/saltv" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Current Salary"
        android:ems="10"
        android:layout_below="@id/skilllevelEt"
        android:layout_toRightOf="@+id/saltv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cursalEt"
        />
    <TextView
        android:text="Current Employer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saltv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/curEmptv" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Current Employer"
        android:ems="10"
        android:layout_below="@id/cursalEt"
        android:layout_toRightOf="@+id/saltv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/curEmpEt"
        />
    <TextView
        android:text="Current Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curEmptv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/curLocTv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Current Location"
        android:ems="10"
        android:layout_below="@id/curEmpEt"
        android:layout_toRightOf="@+id/curLocTv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/getLoc"
        />


    <TextView
        android:text="Job Responsibilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curLocTv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/jobres" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Enter Job Responsibility"
        android:ems="10"
        android:layout_below="@id/getLoc"
        android:layout_toRightOf="@+id/jobres"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/jobresEt"
        />

    <TextView
        android:text="Job Satisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobres"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/jobsatis" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Rate job satisfaction"
        android:ems="10"
        android:layout_below="@id/jobresEt"
        android:layout_toRightOf="@+id/jobsatis"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/jobsatisEt"
        />
    <TextView
        android:text="Savings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobsatisEt"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/save" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Rate job satisfaction"
        android:ems="10"
        android:layout_below="@id/jobsatisEt"
        android:layout_toRightOf="@+id/jobsatis"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/saveEt"
        />
    <TextView
        android:text="Job Expectations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/save"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/expec" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Rate job satisfaction"
        android:ems="10"
        android:layout_below="@id/saveEt"
        android:layout_toRightOf="@+id/expec"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/expecEt"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expecEt"
        android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
        android:text="Submit"
        android:id="@+id/sub"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/expecEt"
        android:text="Take Picture"
        android:id="@+id/bcam"
        />


</RelativeLayout>
</ScrollView>